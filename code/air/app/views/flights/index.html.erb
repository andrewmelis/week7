<div class="row">
  <div class="span12">
    <h1 class="page-header">Today's Flight Schedule</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Flight #</th>
          <th>From</th>
          <th>Departs</th>
          <th>To</th>
          <th>Arrives</th>
          <th>Miles</th>
          <th>Duration</th>
          <th>Seats</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @flights.each do |f| %>
          <tr>
            <td><%= f.number %></td>
            <td><%= f.departure_airport %></td>
            <td><%= f.departs_at.hour %>:<%= f.departs_at.min %></td>
            <td><%= f.arrival_airport %></td>
            <td><%= f.arrives_at.hour %>:<%= f.arrives_at.min %></td>
            <td><%= f.miles %></td>
            <td><%= f.duration %></td>
            <td><%= f.seats %></td>
            <% if f.seats > 0 %>
              <td><a class="btn btn-success">Book Now</a></td>
            <% end %>
          </tr>
        <% end %>


      </tbody>
    </table>
  </div>
</div>

